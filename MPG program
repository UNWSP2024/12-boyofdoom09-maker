import tkinter as tk

def get_entry_value():
    gallons_raw = gallonsfield.get()
    miles_raw = milesfield.get()
    miles = int(miles_raw)
    gallons = int(gallons_raw)
    MPG = miles / gallons
    print(f"Entry value: {MPG}")
    result_var.set(f"Your car's miles per gallon (MPG) is: {MPG:.2f}")

root = tk.Tk()
root.title("entry example")
''
label1 = tk.Label(root, text="Number of miles your car can travel on a full tank")
label1.pack()

milesfield = tk.Entry(root, width=40)
milesfield.pack(pady=10)


label2 = tk.Label(root, text="maximum capacity of gas tank")
label2.pack()

gallonsfield = tk.Entry(root, width=40)
gallonsfield.pack(pady=10)

submit_button = tk.Button(root, text="Calculate miles per gallon", command=get_entry_value)
submit_button.pack()

result_var = tk.StringVar()
result_var.set("Enter values and click 'Calculate' to see your MPG.")

result_label = tk.Label(root, textvariable=result_var, font=("Helvetica", 12))
result_label.pack(pady=10)
